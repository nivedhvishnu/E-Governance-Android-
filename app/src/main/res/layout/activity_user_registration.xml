<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/gradient"
    android:layout_height="match_parent"
    tools:context="com.example.nived.e_governance.UserRegistration">

    <TextView
        android:id="@+id/Registation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:textColor="#fff"
        android:textSize="30dp"
        android:text="Registration" />

    <EditText
        android:id="@+id/user_name"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:drawableLeft="@drawable/ic_action_user"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Username"
        android:layout_below="@+id/name"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/password"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/user_name"
        android:layout_alignRight="@+id/user_name"
        android:layout_below="@+id/user_name"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/ic_action_password"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/confirm_password"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:layout_below="@+id/password"
        android:drawableLeft="@drawable/ic_action_password"
        android:layout_alignLeft="@+id/password"
        android:layout_alignStart="@+id/password"
        android:layout_marginTop="20dp" />

    <EditText
        android:id="@+id/email"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/confirm_password"
        android:layout_alignRight="@+id/confirm_password"
        android:layout_below="@+id/confirm_password"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:drawableLeft="@drawable/ic_action_email"
        android:hint="Email Id"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/contact"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/email"
        android:layout_alignStart="@+id/email"
        android:layout_below="@+id/email"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:drawableLeft="@drawable/ic_action_contact"
        android:hint="Contact No"
        android:inputType="phone" />

    <Button
        android:id="@+id/register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_login"
        android:backgroundTint="@color/colorAccent"
        android:textColor="#fff"
        android:text="Register"
        android:layout_alignBaseline="@+id/exit_button"
        android:layout_alignBottom="@+id/exit_button"
        android:layout_alignLeft="@+id/contact"
        android:layout_alignStart="@+id/contact" />

    <Button
        android:id="@+id/exit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_login"
        android:backgroundTint="@color/colorAccent"
        android:text="Exit"
        android:textColor="#fff"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/contact"
        android:layout_alignEnd="@+id/contact"
        android:layout_marginBottom="11dp" />

    <EditText
        android:id="@+id/name"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:ems="10"
        android:drawableLeft="@drawable/ic_action_manager"
        android:inputType="textPersonName"
        android:hint="Name"
        android:layout_below="@+id/Registation"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
